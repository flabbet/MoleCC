<Window x:Class="MoleCC.Views.VideoPlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:MoleCC.ViewModels"
        xmlns:local="clr-namespace:MoleCC.Views"
        mc:Ignorable="d"
        Title="VideoPlayerWindow" Background="#343434" Height="450" WindowState="Maximized" Width="800" DataContext="{DynamicResource VideoPlayerViewModel}">
    <Window.Resources>
        <vm:VideoPlayerViewModel x:Key="VideoPlayerViewModel"/>
    </Window.Resources>
    <Grid>
        <MediaElement Source="{Binding CurrentVideoPath}"/>
    </Grid>
</Window>
